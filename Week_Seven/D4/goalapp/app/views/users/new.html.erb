<h1>NEW USER</h1>

<form class="new_input" action="<%= users_url %>" method="POST">
    <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
    <p>
    <label for="new-user-email">
        Email:
    </label>
    <input id="new-user-email" type="text" name="user[email]">
    </p>
    <p>
    <label for="new-user-username">
        Username:
    </label>
    <input id="new-user-username" type="text" name="user[username]">
    </p>
    <p>
    <label for="new-user-password">
        Password:
    </label>
    <input id="new-user-password" type="password" name="user[password]">
    </p>
</form>